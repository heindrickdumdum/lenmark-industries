/*********************** Custom CSS for Boost Filter & Search  ************************/
$breakpointMobile: 767px;
$breakpointSearchMobile: 767px;
$searchBoxMobileHeight: 64px;

/**************************** Place your custom css below  ****************************/  

// WAREHOUSE THEME VARIABLES
$accent-color        : {{settings.accent_color}};
$accent-background   : rgba({{settings.accent_color}}, 0.08);
// END WAREHOUSE THEME VARIABLES  

.search-bar__inner {
 	display:none
}
.boost-pfs-search-suggestion-wrapper {
 	position:fixed
}
.boost-pfs-search-suggestion-item:hover {
  	color: $accent-color;
  	background-color: $accent-background;
}
#boost-pfs-filter-tree2 {
  	display: initial;
}
#boost-pfs-filter-tree2 .boost-pfs-filter-tree-content {
    padding: 20px;
}
.boost-pfs-filter-breadcrumb.hidden {
  	display: none;
}  
.boost-pfs-filter-message {
  	margin: 0 auto;
}
.search-bar__filter {
  	display: none !important;
}
.boost-pfs-filter-scroll-to-top {
	z-index: 1;
}

/**** Custom Search result toolbar ****/
.boost-pfs-search-result-toolbar {
	display: flex;
	align-items: center;
	margin: 35px 0;
	border: 1px solid #e1e3e4;
	padding: 0 30px;
	border-radius: 3px;
	white-space: nowrap;
	background: #fff;
	.boost-pfs-search-result-item:first-child {
		flex: auto;
	}
	.boost-pfs-search-result-panel-controls {
		padding: 17px 0;
		margin: 0;
	}
	@media (max-width: #{$breakpointMobile}) {
		.boost-pfs-search-total-result {
			display: none;
		}
	}
}

.boost-pfs-search-result-wrap {
	background: #fff;
	border: 1px solid #e1e3e4;
	padding: 30px 0 0 0;
	border-radius: 3px;
	.boost-pfs-search-result-list-item {
		padding: 30px;
	}

	.pagination {
		padding: 20px 30px;
	}
}