<style>

  .section-{{ section.id }} {
    padding: 50px 0;
    background: url("{{ section.settings.banner_image | img_url: 'master' }}") no-repeat;
    background-size: cover;
  }
  .section-{{ section.id }} .item_offer {color: #fff;width: 50%;margin-bottom: 20px;}
  .section-{{ section.id }} .item_offer .item_offer-details .item_offer-title { font-size: 30px; margin-bottom: 0; line-height: 1; }
  .section-{{ section.id }} .item_offer .item_offer-details .item_offer-desc { font-size: 24px; line-height: 1; }
  
  @media screen and (max-width: 767px) {
    .section-{{ section.id }} { /*padding: 30px 0; */}
  }
</style>

<div class="section-{{ section.id }}">
  <div class="container">
    <div class="section-heading text-center">
      <p class="heading">{{ section.settings.heading_text }}</p>
      <p class="sub-heading">{{ section.settings.sub_heading_text }}</p>
    </div>
    <div class="flex items-center flex-wrap">
      {%- for block in section.blocks -%}
        <div class="item_offer">
          <div class="item_offer-img"></div>
          <div class="item_offer-details">
            <p class="item_offer-title">{{ block.settings.offer_title }}</p>
            <p class="item_offer-desc">{{ block.settings.offer_desc }}</p>
          </div>
        </div>
      {%- endfor-%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Section 3",
  "settings": [
    {
      "type": "html",
      "id": "heading_text",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub_heading_text",
      "label": "Sub Heading"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
  ],
  "blocks": [
    {
      "type": "offers",
      "name": "Offers",
      "settings": [
        {
          "type": "image_picker",
          "id": "offer_image"
        },
        {
          "type": "text",
          "id": "offer_title",
          "label": "Offer Title"
        },
        {
          "type": "text",
          "id": "offer_desc",
          "label": "Offer Description"
        }
      ]
    }
  ]
}
{% endschema %}